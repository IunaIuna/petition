{{#if err}}
<div class="error"> Oops, something went wrong.</div>
{{/if}}

<a id="logout" href="/logout"><img src="icons8-export-80.png"></a>


<h1>Thanks for signing up!</h1>

<canvas id="signatureAsImage" width="600" height="100"></canvas>

<center>
<a href="/signers" id="linkToSubscriberList">See all {{amountOfSubscribers}} signers</a><br>

<a href="/profile/edit" id="profilEdit">Edit your profile</a><br>

<form method="POST" action="/signed/delete">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <button id="deleteButton">Delete your signature</button>
</form><br>
</center>

<script type="text/javascript">
  let newCanvas = document.getElementById("signatureAsImage");
  var image = new Image();
  let ctx2 = newCanvas.getContext("2d");

  image.onload = function() {
    ctx2.drawImage( this, 0, 0);
    image.style.display = "none";
  };
  image.src = "{{output}}";
</script>
